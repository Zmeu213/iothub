extends layout

block content
  script(src='https://cdnjs.cloudflare.com/ajax/libs/vis/4.16.1/vis.min.js')
  script(src='https://code.jquery.com/jquery-3.0.0.min.js')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/vis/4.16.1/vis.min.css')
  div(class="container")
    form(class="navbar-form navbar-left", method="post")
            div(class="form-group")
              input(type="text", placeholder="From", class="form-control", name="from")
            div(class="form-group")
              input(type="text", placeholder="To", class="form-control", name="to")
            div(class="form-group")
              input(type="text", placeholder="Device ID", class="form-control", name="id")
            button(type="submit",value=" Send", class="btn btn-success") Show
  div(class="container")
    h3(class="text-center") This device show #{myvar}
  div(id="visualization", class="visualization")
  script(src='/js/vis.js')
